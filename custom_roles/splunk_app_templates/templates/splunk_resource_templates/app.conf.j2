[install]
state = enabled
is_configured = true

[launcher]
author = {{ template_vars.team | default('Ansible Automation') }}
version = {{ app_version | default('1.0.0') }}
description = {{ app_description | default('Auto-generated Splunk app') }}

[package]
id = {{ app_name | lower }}
check_for_updates = false

[ui]
is_visible = true
label = {{ app_name | lower }}

[triggers]
reload.inputs = simple
reload.indexes = simple

